---
const { title, description, icon } = Astro.props;
---

<div
  class='relative overflow-hidden group flex flex-col p-6 w-full h-full rounded-xl bg-gradient-to-br from-purple-900/40 to-indigo-900/40 backdrop-blur-sm border border-purple-500/20 hover:border-purple-500/50 transition-all duration-500 hover:shadow-[0_0_30px_5px_rgba(147,51,234,0.3)] transform hover:scale-[1.02]'
>
  <div
    class='absolute inset-0 bg-gradient-to-br opacity-0 transition-opacity duration-500 from-purple-600/10 to-indigo-600/10 group-hover:opacity-100'
  >
  </div>

  <div class='flex relative flex-col gap-4 items-center mb-4 text-center'>
    <div
      class='flex justify-center items-center w-14 h-14 bg-gradient-to-br from-purple-500 to-indigo-600 rounded-full shadow-lg transition-all duration-500 shadow-purple-500/30 group-hover:shadow-purple-500/50'
    >
      <span class='text-3xl text-white material-icons'>{icon}</span>
    </div>
    <h3
      class='text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-300 to-indigo-300 transition-all duration-500 group-hover:from-purple-200 group-hover:to-indigo-200'
    >
      {title}
    </h3>
  </div>

  <div class='flex relative flex-col flex-grow justify-center items-center'>
    <p
      class='text-sm text-center text-gray-300 transition-colors duration-500 group-hover:text-white'
    >
      {description}
    </p>
  </div>

  <div
    class='absolute -right-1 -bottom-1 w-24 h-24 bg-gradient-to-br rounded-full opacity-0 blur-2xl transition-opacity duration-500 from-purple-600/20 to-indigo-600/20 group-hover:opacity-100'
  >
  </div>
</div>

<style>
  .material-icons {
    font-variation-settings: "FILL" 1;
  }
</style>
